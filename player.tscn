script/source = "extends CharacterBody3D

var gravity = ProjectSettings.get_setting(\"physics/3d/default_gravity\")
var speed = 4.0  # movement speed
var jump_speed = 6.0  # determines jump height
var mouse_sensitivity = 0.002  # turning speed

func _ready():
	Input.mouse_mode = Input.MOUSE_MODE_CAPTURED
	
func _input(event):
	if event is InputEventMouseMotion and Input.mouse_mode == Input.MOUSE_MODE_CAPTURED:
		rotate_y(-event.relative.x * mouse_sensitivity)
		$Camera3D.rotate_z(-event.relative.y * mouse_sensitivity)
		$Camera3D.rotation.x = clampf($Camera3D.rotation.x, -deg_to_rad(89), deg_to_rad(89))
		
	if event.is_action_pressed(\"exit game\"):
		get_tree().quit()
	if Input.is_action_just_pressed(\"jump\"):
		if is_on_floor():
			velocity.y = 4.9
		
func get_input():
	var input = Input.get_vector(\"move_back\",\"move_forward\",\"strafe_left\", \"strafe_right\")
	return input

func _physics_process(delta):
	velocity.y += -gravity * delta
	var input = get_input()
	var movement_dir = transform.basis * Vector3(input.x, 0, input.y)
	velocity.x = movement_dir.x * speed
	velocity.z = movement_dir.z * speed
	move_and_slide()
"

